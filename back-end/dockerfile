WORKDIR /back-end

COPY requirements.txt requirements.txt

COPY . .

RUN pip install -r requirements.txt

ENV DJANGO_SETTINGS_MODULE=back_end.settings

RUN chmod +x start.sh

EXPOSE 8000

CMD ["sh", "start.sh"]

